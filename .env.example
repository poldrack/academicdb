# Academic Database Environment Configuration Template
# Copy this file to .env and customize for your deployment

# SECURITY WARNING: Change this secret key in production!
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (never set to true in production)
DEBUG=false

# Database Configuration
# Set to true for PostgreSQL, false for SQLite
USE_POSTGRES=false

# SQLite Configuration (when USE_POSTGRES=false)
SQLITE_PATH=/app/data/db.sqlite3

# PostgreSQL Configuration (when USE_POSTGRES=true)
DB_HOST=db
DB_NAME=academicdb
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_PORT=5432

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# HTTPS Configuration
USE_HTTPS=false

# Superuser Creation (optional)
# These variables create an admin user on first startup
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password-here

# Logging Configuration
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO

# API Rate Limiting
API_THROTTLE_ANON=100/hour
API_THROTTLE_USER=1000/hour

# Session Configuration
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=false

# Time Zone
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Email Configuration (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# DEFAULT_FROM_EMAIL=noreply@academicdb.local

# ORCID Configuration
ORCID_BASE_DOMAIN=orcid.org
ORCID_MEMBER_API=false

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_MEMORY_SIZE=2621440

# Cache Configuration (optional)
# REDIS_URL=redis://redis:6379/0